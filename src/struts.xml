<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="hibernate" extends="struts-default">
		<action name="savePerson" class="com.shengsiyuan.action.PersonAction" method="savePerson">
			<result name="success">/listAll.jsp</result>
		</action>
		
		<action name="deletePerson" class="com.shengsiyuan.action.PersonAction" method="deletePerson">
			<result name="success">/listAll.jsp</result>
		</action>
		
		<action name="getSinglePerson" class="com.shengsiyuan.action.PersonAction" method="getSinglePerson">
			<result name="success">/getSinglePerson.jsp</result>
		</action>
		
		<action name="updatePerson1" class="com.shengsiyuan.action.PersonAction" method="getSinglePerson">
			<result name="success">/updatePerson.jsp</result>
		</action>
		
		<action name="updatePerson2" class="com.shengsiyuan.action.PersonAction" method="updatePerson">
			<result name="success">/listAll.jsp</result>
		</action>
	</package>
</struts>

